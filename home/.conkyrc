alignment bottom_left
background yes
border_width 0
cpu_avg_samples 2
default_color aaa
default_outline_color aaa
default_shade_color aaa
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Sans:size=10
gap_x 8
gap_y 12
minimum_size 222 5
net_avg_samples 2
no_buffers yes
double_buffer yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_argb_visual true
own_window_class Conky
own_window_type normal
own_window_hints skip_taskbar,skip_pager,sticky
own_window_transparent yes
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
${color #ddd}Memory    $color$alignr${membar 10,150}
${color #ddd}CPU $cpu% $color$alignr${cpugraph 40,150}
${color #ddd}/         $color$alignr${fs_bar 10,150 /}
${color #ddd}/home     $color$alignr${fs_bar 10,150 /home}

${color #ddd}Uptime    $color$alignr$uptime
${color #ddd}Network   $color$alignr${upspeed eth0}/${downspeed eth0}

${color #ddd}${font Sans:bold:size=10}TOP RAM PROCESSES$font$color
 ${top_mem name 1}$alignr${top_mem mem_res 1}
 ${top_mem name 2}$alignr${top_mem mem_res 2}
 ${top_mem name 3}$alignr${top_mem mem_res 3}
