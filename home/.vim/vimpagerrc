set nocompatible

" Assume utf-8 everywhere
if has('multi_byte')
    scriptencoding utf-8
    setglobal encoding=utf-8
    setglobal termencoding=utf-8
    setglobal fileencoding=utf-8
endif

if exists('&termguicolors')
    set termguicolors
endif

" Must be enabled before pathogen#infect:
" https://github.com/igankevich/mesonic/issues/14
syntax enable

if has('gui_running') || &t_Co >= 88
    set cursorline              " Highlight the current line
endif

set background=dark
colorscheme PaperColor

" Let copy&paste with mouse work
set mouse=

" Leave some context rows/lines while moving around
if exists('&scrolloff')
  set scrolloff=8
endif
if exists('&sidescrolloff')
  set sidescrolloff=8
endif

set helplang=en
set incsearch
set hlsearch
set ignorecase
set smartcase
set tabstop=8

" Make the primary selection ("* register) persistent on exit.
" Requires xsel installed.
if executable('xsel')
    autocmd VimLeave * call system("xsel -i", getreg('*'))
endif

" Make : more accessible on italian layout
noremap Ã² :

" Word movement commands
nnoremap wh B
nnoremap wj }
nnoremap wk {
nnoremap wl W

" Ignore built folders
set wildignore+=*/.git/*,*/node_modules/*,*/build/*

" Load local customizations, if any
runtime vimpagerrc-private
