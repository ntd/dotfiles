window-width = 9999
window-height = 9999
window-padding-x = 4
window-padding-y = 4
window-decoration = false
theme = Wombat
shell-integration = bash
background-opacity = 0.9
unfocused-split-opacity = 0.5
font-family = "JetBrains Mono Light"
font-size = 18
cursor-style = block
mouse-hide-while-typing = true

keybind = alt+n=new_tab
keybind = alt+h=previous_tab
keybind = alt+l=next_tab
keybind = alt+k=scroll_page_lines:-1
keybind = alt+j=scroll_page_lines:+1
keybind = alt+shift+k=scroll_page_up
keybind = alt+shift+j=scroll_page_down
keybind = ctrl+alt+h=move_tab:-1
keybind = ctrl+alt+l=move_tab:+1
keybind = alt+kp_add=increase_font_size:1
keybind = alt+kp_subtract=decrease_font_size:1
keybind = alt+kp_enter=reset_font_size
keybind = ctrl+alt+plus=increase_font_size:1
keybind = ctrl+alt+minus=decrease_font_size:1
keybind = ctrl+alt+enter=reset_font_size
keybind = ctrl+alt+left=new_split:left
keybind = ctrl+alt+right=new_split:right
keybind = ctrl+alt+up=new_split:up
keybind = ctrl+alt+down=new_split:down
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
# See https://github.com/ghostty-org/ghostty/pull/3427
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom
keybind = shift+alt+left=resize_split:left,80
keybind = shift+alt+right=resize_split:right,80
keybind = shift+alt+up=resize_split:up,50
keybind = shift+alt+down=resize_split:down,50
keybind = alt+z=toggle_split_zoom
keybind = alt+\=toggle_tab_overview
keybind = alt+enter=write_scrollback_file:open
